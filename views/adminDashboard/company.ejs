<% layout('layout/boilerplate2') %>


<div class="container py-5">
    <!-- Company Header -->
    <div class="company-header p-4 mb-5 position-relative">
      <a href="/company/edit" class="edit-btn">
        <i class="fas fa-pencil-alt"></i>
      </a>
      
      <div class="d-flex align-items-center header-content">
        <div class="me-4">
          <img src="<%= company.logo.url || '/img/default-company.png' %>" 
               class="company-logo" 
               alt="<%= company.name %> logo">
        </div>
        
        <div class="flex-grow-1">
          <h1 class="display-5 mb-2"><%= company.name %></h1>
          <div class="d-flex align-items-center mb-3">
            <span class="company-type-badge me-2">
              <i class="fas fa-building me-1"></i>
              <%= company.type %>
            </span>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Stats Cards -->
    <div class="row mb-5 g-4">
      <div class="col-md-6">
        <div class="stats-card bg-white">
          <div class="d-flex align-items-center">
            <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
              <i class="fas fa-sitemap text-primary"></i>
            </div>
            <div>
              <h6 class="text-muted mb-1">DEPARTMENTS</h6>
              <h2 class="stats-number mb-0"><%= company.department.length %></h2>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="stats-card bg-white">
          <div class="d-flex align-items-center">
            <div class="bg-success bg-opacity-10 p-3 rounded-circle me-3">
              <i class="fas fa-users text-success"></i>
            </div>
            <div>
              <h6 class="text-muted mb-1">TOTAL EMPLOYEES</h6>
              <h2 class="stats-number mb-0"><%= employeeCount || 0 %></h2>
            </div>
          </div>
        </div>
      </div>
      
      
    </div>
    
    <!-- Departments Section -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="mb-0">Departments</h3>
          
        </div>
      </div>
    </div>
    
    <div class="row g-4">
      <% company.department.forEach(dept => {
        const formattedDept = dept.charAt(0).toUpperCase() + dept.slice(1).toLowerCase();
   %>
     <div class="col-md-4 col-lg-3">
       <div class="department-card bg-white p-4 text-center">
         <div class="department-icon">
           <% const deptIcons = {
             'Hr': 'fa-user-tie',
             'It': 'fa-laptop-code',
             'Finance': 'fa-coins',
             'Marketing': 'fa-bullhorn',
             'Sales': 'fa-handshake',
             'Operations': 'fa-cogs',
             'Design': 'fa-paint-brush',
             'Engineering': 'fa-microchip'
           } %>
           <i class="fas <%= deptIcons[formattedDept] || 'fa-building' %>"></i>
         </div>
         <h5 class="mb-2"><%= formattedDept %></h5>
       </div>
     </div>
   <% }) %>
   
    </div>
    
    <!-- Recent Activity -->
    
  </div>