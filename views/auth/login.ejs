<% layout('layout/boilerplate') %>
<% title = "Login" %>

<style>
  body {
    background: linear-gradient(to right, #1e3c72, #2a5298);
    color: #fff;
    font-family: 'Segoe UI', sans-serif;
  }

  .login-section {

    color: #333;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    padding: 2rem;
  }

  
  .left-info  {
    padding: 2.5rem;
  }
  .left-info h1 {
    font-size: 2.5rem;
    font-weight: 600;
  }


  .left-info p {
    font-size: 1.1rem;
    margin-top: 1rem;
    line-height: 1.6;
  }

  .login-icon {
    font-size: 1.8rem;
    color: #ffc107;
    margin-right: 0.5rem;
  }

  .alert-danger {
    font-size: 0.9rem;
    padding: 0.75rem;
  }

  .signup-link {
    text-align: center;
    margin-top: 1rem;
    font-size: 0.95rem;
  }

  .signup-link a {
    color: #0d6efd;
    text-decoration: none;
  }

  .signup-link a:hover {
    text-decoration: underline;
  }
</style>

<div class="container py-5">
  <div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-md-10 bg-light rounded-4  overflow-hidden d-flex flex-wrap">

      <!-- Website Summary -->
      <div class="col-md-6 left-info bg-dark d-flex flex-column justify-content-center">
        <h1><i class="fas fa-building me-2"></i>Employee Management System</h1>
        <p>Welcome to EMS â€“ your go-to portal for managing employees, departments, and company structure efficiently and securely.</p>
        <ul class="mt-4 list-unstyled">
          <li><i class="fas fa-user-check login-icon"></i> Easy employee onboarding</li>
          <li><i class="fas fa-chart-line login-icon"></i> Real-time analytics dashboard</li>
          <li><i class="fas fa-cogs login-icon"></i> Complete company control</li>
        </ul>
      </div>

      <!-- Login Form -->
      <div class="col-md-6 p-4 login-section">
        <h3 class="text-center mb-4"><i class="fas fa-user-shield me-2"></i>Admin Login</h3>

        <% if (error && error.length) { %>
          <div class="alert alert-danger text-center"><%= error %></div>
        <% } %>

        <form action="/login" method="POST">
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input class="form-control" name="username" id="username" required>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" name="password" id="password" required>
          </div>
          <button class="btn btn-primary w-100"><i class="fas fa-sign-in-alt me-2"></i>Login</button>
        </form>

        <!-- Sign Up Option -->
        <div class="signup-link">
          Don't have an account?
          <a href="/signup"><i class="fas fa-user-plus me-1"></i>Sign Up</a>
        </div>
      </div>

    </div>
  </div>
</div>
